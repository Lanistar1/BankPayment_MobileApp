<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#E8E6FE"
             Title="Payment"
             x:Class="BankApp.Views.ErrorPage">


    <Grid Margin="10,50">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" Margin="0,10">
            <Image Source="alert.png" HeightRequest="50" WidthRequest="50" Margin="0,10"/>
        </StackLayout>
        <Label Text="Transfer Fail!" Grid.Row="1" HorizontalTextAlignment="Center" TextColor="Black" FontSize="Medium" Margin="0,0,0,10"/>
        <Label Text="We are unable to process your" Grid.Row="2" HorizontalTextAlignment="Center" TextColor="Black" FontSize="Subtitle"/>
        <Label Text="transfer at the moment" Grid.Row="3" HorizontalTextAlignment="Center" TextColor="Black" FontSize="Subtitle"/>

        <Button Text="Try Again" BackgroundColor="#1A00D4" TextColor="White" Margin="10,10,10,10" Grid.Row="4" CornerRadius="5"/>

        <Button Text="Cancel" BackgroundColor="White" TextColor="#1A00D4" Margin="10,0" Grid.Row="5" CornerRadius="5"/>
    </Grid>
</ContentPage>