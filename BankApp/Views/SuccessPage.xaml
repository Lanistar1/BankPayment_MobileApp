<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#E8E6FE"
             Title="Payment"
             x:Class="BankApp.Views.SuccessPage">


    <Grid Margin="10,50">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <StackLayout Grid.Row="0" Margin="0,10">
            <Image Source="success.png" HeightRequest="50" WidthRequest="50"/>
        </StackLayout>
        <Label Text="Transfer Successful!" Grid.Row="1" HorizontalTextAlignment="Center" TextColor="Black" FontSize="Subtitle"/>

        <Button Text="OK" BackgroundColor="#1A00D4" TextColor="White" Margin="10,10,10,10" Grid.Row="2" CornerRadius="5"/>
        
        <Button Text="Download Receipt" BackgroundColor="White" TextColor="#1A00D4" Margin="10,0" Grid.Row="3" CornerRadius="5"/>
    </Grid>
</ContentPage>